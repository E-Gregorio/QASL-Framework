{
    "name": "qa-hu-template",
    "version": "1.0.0",
    "description": "Template Universal QA - Shift-Left Testing (E2E, API, Performance, Security)",
    "type": "module",
    "scripts": {
        "e2e": "node scripts/run-e2e.mjs",
        "api": "node scripts/run-api.mjs",
        "k6": "node scripts/run-k6.mjs",
        "zap": "node scripts/run-zap.mjs",
        "pipeline": "node scripts/run-pipeline.mjs",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "allure:open": "allure open reports/e2e/allure-report",
        "allure:generate": "allure generate reports/e2e/allure-results -o reports/e2e/allure-report --clean",
        "clean": "node -e \"const fs=require('fs');['reports','allure-results','.api-captures','.temp-k6','.temp-newman'].forEach(d=>{if(fs.existsSync(d))fs.rmSync(d,{recursive:true,force:true});console.log('Deleted:',d)})\"",
        "clean:reports": "node -e \"const fs=require('fs');if(fs.existsSync('reports'))fs.rmSync('reports',{recursive:true,force:true});console.log('Reports cleaned')\"",
        "publish": "node scripts/publish-reports.mjs"
    },
    "keywords": [
        "qa",
        "testing",
        "playwright",
        "e2e",
        "automation"
    ],
    "author": "QA Team",
    "license": "ISC",
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@types/node": "^24.10.1",
        "allure-commandline": "^2.25.0",
        "allure-playwright": "^2.15.0",
        "typescript": "^5.3.0"
    },
    "dependencies": {
        "dotenv": "^16.3.1"
    }
}
